{
    "whitespace": [true, "check-module"],
    "compilerOptions": {
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "allowSyntheticDefaultImports": true,
        "module": "commonjs",
        "target": "es2017",
        "lib": ["es2015", "es2017.object", "dom", "es2019", "es6"],
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "lib",
        "baseUrl": ".",
        "skipLibCheck": true,
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ]
        }
    },
    "include": [
        "src/index.ts",
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}

